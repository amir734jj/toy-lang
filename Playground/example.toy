/**
 * Extending IO gives us printing capabilities
 * Driver class is the entry point
 */
class Driver() extends IO() {
    def fact(n: Int): Int = if (n <= 1) n else n * fact(n-1);
    
    { var result: Int = in().toInt();
      alert("fact of "
        .concat(result.toString())
        .concat(" is: ")
        .concat(fact(result).toString())) }
}